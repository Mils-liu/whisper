<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/txt_title_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="简介设置"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:id="@+id/view_distance_brief"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/txt_title_brief"
        android:background="@color/darkgray" />

    <EditText
        android:id="@+id/edt_brief"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/view_distance_brief"
        android:layout_centerInParent="true"
        android:background="@null"
        android:gravity="center"
        android:maxLength="40"
        android:padding="@dimen/margin_5"
        android:text="简介"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/text_size_18" />

    <View
        android:id="@+id/view_distance_brief2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/edt_brief"
        android:background="@color/darkgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_distance_brief2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cancel_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_ensure_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>