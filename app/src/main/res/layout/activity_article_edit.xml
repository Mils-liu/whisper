<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:id="@+id/scv_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_above="@+id/view_distance_complete">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl_addcover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/articlecover_height"
                android:clickable="true">

                <ImageView
                    android:id="@+id/img_addCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txt_addtextHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"
                    android:text="添加封面"
                    android:textColor="@color/textcolor"/>

            </FrameLayout>

            <EditText
                android:id="@+id/edt_addtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_addcover"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:hint="添加标题"
                android:textSize="@dimen/text_size_18"
                android:textColor="#000"
                android:background="@null"
                android:textColorHint="@color/textcolor"/>

            <View
                android:id="@+id/view_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:layout_below="@+id/edt_addtitle"
                android:background="#000"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"/>

            <EditText
                android:id="@+id/edt_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view_edit"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:textSize="@dimen/text_size_15"
                android:gravity="left"
                android:hint="添加文字"
                android:textColor="#000"
                android:background="@null"
                android:textColorHint="@color/textcolor"/>

        </RelativeLayout>

    </ScrollView>

    <View
        android:id="@+id/view_distance_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_above="@+id/ll_complete"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="#000"/>

    <LinearLayout
        android:id="@+id/ll_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="保存"
            android:textSize="@dimen/text_size_18"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_release"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="发布"
            android:textSize="@dimen/text_size_18"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>