<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#fff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_head_myfans"
        android:layout_width="@dimen/head_size"
        android:layout_height="@dimen/head_size"
        android:layout_margin="@dimen/margin_14"
        android:layout_alignParentLeft="true"
        android:src="@drawable/head"/>

    <TextView
        android:id="@+id/txt_username_myfans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/textcolor"
        android:layout_toRightOf="@+id/ci_head_myfans"
        android:text="我的粉丝"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_focus_myfans"
        android:layout_width="@dimen/focus_width"
        android:layout_height="@dimen/focus_height"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/shape_rounded_rectangle_select"
        android:gravity="center"
        android:text="@string/dofocus"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />

</RelativeLayout>