<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_sendemail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:textColor="@color/darkgreen"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:id="@+id/ll_sendemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_emailAdress"
            android:layout_width="@dimen/width_180"
            android:layout_height="@dimen/height_30"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/shape_rounded_rectangle"
            android:gravity="center"
            android:hint="请输入邮箱地址"
            android:textSize="@dimen/text_size_15" />

        <Button
            android:id="@+id/btn_sendmail"
            android:layout_width="@dimen/width_180"
            android:layout_height="@dimen/height_30"
            android:layout_gravity="center"
            android:background="@drawable/shape_rounded_rectangle_green"
            android:text="发送"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

</RelativeLayout>