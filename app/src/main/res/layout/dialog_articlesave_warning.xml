<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/txt_title_savewarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="提示"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:id="@+id/view_distance_savewarning"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/txt_title_savewarning"
        android:background="@color/darkgray" />

    <TextView
        android:id="@+id/txt_savewarning"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="是否保存草稿？"
        android:layout_below="@+id/view_distance_savewarning"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"/>

    <View
        android:id="@+id/view_distance_savewarning2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/txt_savewarning"
        android:background="@color/darkgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_distance_savewarning2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_quit_savewarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="退出"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_ensure_savewarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>