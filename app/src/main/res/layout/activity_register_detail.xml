<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/txt_update_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="密码只允许数字及大小写字母"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/text_size_15" />

    <EditText
        android:id="@+id/edt_user_name"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_below="@+id/txt_update_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/shape_rounded_rectangle"
        android:gravity="center"
        android:hint="用户名"
        android:lines="1"
        android:padding="@dimen/margin_5"
        android:textSize="@dimen/text_size_15" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_below="@+id/edt_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/shape_rounded_rectangle"
        android:digits="@string/filter_password"
        android:gravity="center"
        android:hint="密码"
        android:lines="1"
        android:padding="@dimen/margin_5"
        android:password="true"
        android:textSize="@dimen/text_size_15" />

    <EditText
        android:id="@+id/edt_password_confirm"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_below="@+id/edt_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/shape_rounded_rectangle"
        android:digits="@string/filter_password"
        android:gravity="center"
        android:hint="确认密码"
        android:lines="1"
        android:padding="@dimen/margin_5"
        android:password="true"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/txt_sex_choose"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_below="@+id/edt_password_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/shape_rounded_rectangle"
        android:gravity="center"
        android:hint="性别"
        android:padding="@dimen/margin_5"
        android:textSize="@dimen/text_size_15" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_below="@+id/txt_sex_choose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/shape_rounded_rectangle_green"
        android:gravity="center"
        android:text="注册" />


</RelativeLayout>
