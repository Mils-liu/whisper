<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10"
    android:elevation="@dimen/elevation_5"
    app:cardCornerRadius="@dimen/corner_radius_4">

    <RelativeLayout
        android:id="@+id/rl_article_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="@dimen/margin_5">

        <TextView
            android:id="@+id/txt_title_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="推荐文章标题"
            android:textColor="#000"
            android:textSize="@dimen/text_size_15"
            android:layout_margin="@dimen/margin_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_recommend"
            android:layout_margin="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_content_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"
                android:lines="3"
                android:textColor="@color/textcolor" />

            <ImageView
                android:id="@+id/img_cover_recommend"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image" />

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>