<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rl_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_articles_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:text="title"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txt_articles_creation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_below="@+id/txt_articles_title"
            android:text="创建于"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_15"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_articles_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_articles_creation"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:elevation="@dimen/elevation_5"
            app:cardCornerRadius="@dimen/corner_radius_4">

            <ImageView
                android:id="@+id/img_articles_cover"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txt_articles_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_articles_cover"
            android:layout_margin="@dimen/margin_10"
            android:gravity="left"
            android:maxLines="3"
            android:text="高中美术老师在课堂上给我们放了《逆光》MV，说燕姿的专辑就算100块也会去买(当时内地版大概2、30块一张)，她还问班里有没有喜欢孙燕姿的，同学都齐刷刷地看向我，当时我感到很自豪，自信的举起了手一晃眼8、9年过去了，仿佛还是昨天发生的事"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:layout_below="@+id/txt_articles_content"
            android:background="@color/gray" />
    </RelativeLayout>



</RelativeLayout>