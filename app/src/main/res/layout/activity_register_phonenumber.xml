<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fitsSystemWindows="true">

    <EditText
        android:id="@+id/edt_user_phonenumber"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_above="@+id/view_center"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/shape_rounded_rectangle"
        android:digits="@string/filter_number"
        android:gravity="center"
        android:hint="请输入常用手机号"
        android:inputType="phone|number"
        android:lines="1"
        android:maxLength="11"
        android:padding="@dimen/margin_5"
        android:textSize="@dimen/text_size_15" />

    <View
        android:id="@+id/view_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_getcode"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_below="@+id/view_center"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/shape_rounded_rectangle_green"
        android:gravity="center"
        android:text="获取验证码" />

</RelativeLayout>