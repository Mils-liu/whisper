<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/txt_title_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="头像设置"
        android:textColor="#000"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp" />

    <View
        android:id="@+id/view_distance_picture"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/txt_title_picture"
        android:background="@color/darkgray"/>

    <LinearLayout
        android:id="@+id/ll_picture_choose"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/view_distance_picture">

        <FrameLayout
            android:id="@+id/fl_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_red_camera"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_red"/>

            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_camera" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_blue_albume"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_blue"/>

            <ImageView
                android:id="@+id/img_albume"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_album" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/ll_picture_choose">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#696969"
            android:text="拍照"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#696969"
            android:text="相册"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:id="@+id/view_ensure_head"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_picture"
        android:background="@color/darkgray"/>

    <TextView
        android:id="@+id/txt_ensure_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_ensure_head"
        android:text="确定"
        android:textColor="#000"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp" />

</RelativeLayout>