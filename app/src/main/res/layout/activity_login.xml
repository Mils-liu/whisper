<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:src="@drawable/whisper"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/edt_username_login"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/edt_username_login"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:hint="用户名"
        android:textSize="@dimen/text_size_15"
        android:gravity="center"
        android:singleLine="true"
        android:padding="@dimen/margin_5"
        android:background="@drawable/shape_rounded_rectangle"
        android:layout_margin="@dimen/margin_20"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/edt_password_login"/>

    <EditText
        android:id="@+id/edt_password_login"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:textSize="@dimen/text_size_15"
        android:lines="1"
        android:password="true"
        android:padding="@dimen/margin_5"
        android:gravity="center"
        android:background="@drawable/shape_rounded_rectangle"
        android:hint="密码"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:text="登录"
        android:layout_margin="@dimen/margin_40"
        android:textSize="@dimen/text_size_15"
        android:layout_below="@+id/edt_password_login"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_rounded_rectangle_green"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="130dp"
        android:layout_height="@dimen/actionbar_size"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_password_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_15"
            android:text="忘记密码"
            android:textColor="@color/darkgreen"
            android:layout_marginBottom="@dimen/margin_5"/>
        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:gravity="center"
            android:layout_weight="1"
            android:text="注册账号"
            android:textColor="@color/darkgreen"
            android:layout_marginBottom="@dimen/margin_5"/>
    </LinearLayout>

</RelativeLayout>