<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_username_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/whisper" />

    <EditText
        android:id="@+id/edt_username_login"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_above="@+id/edt_password_login"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_20"
        android:background="@drawable/shape_rounded_rectangle"
        android:gravity="center"
        android:hint="用户名"
        android:padding="@dimen/margin_5"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/my_cursor"
        android:textSize="@dimen/text_size_15" />

    <EditText
        android:id="@+id/edt_password_login"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_rounded_rectangle"
        android:gravity="center"
        android:hint="密码"
        android:lines="1"
        android:padding="@dimen/margin_5"
        android:password="true"
        android:textCursorDrawable="@drawable/my_cursor"
        android:textSize="@dimen/text_size_15" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/width_180"
        android:layout_height="@dimen/height_30"
        android:layout_below="@+id/edt_password_login"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_40"
        android:background="@drawable/shape_rounded_rectangle_green"
        android:text="登录"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="@dimen/actionbar_size"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_password_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@color/darkgreen"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册账号"
            android:textColor="@color/darkgreen"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

</RelativeLayout>